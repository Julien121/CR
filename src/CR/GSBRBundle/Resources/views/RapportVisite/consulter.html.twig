{% extends "CRGSBRBundle::layout.html.twig" %}
{% block title %}
    Accueil - {{ parent() }}
{% endblock %}
{% block body %}
    <h3 class="text-center">Vos rapport de visites</h3>

    <hr> 
    <table class="table table-bordered table-condensed table-body-center" >
        <thead>
            <tr>
                <th>Date</th>
                <th>Praticien</th>
                <th>Ville</th>
                <th>Motif</th>
            </tr>
        </thead>
        <tbody>
            {% for unRapport in lesRapports %}
                <tr>
                    <td> {{ unRapport.getDateRapport|date('d/m/Y') }} </td>
                    <td> {{ unRapport.getMedecin.getPrenomNom }}</td>
                    <td> {{ unRapport.getMedecin.getVilleMedecin }}</td>
                    <td> {{ unRapport.getMotif }}</td>                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}