{% extends "CRGSBRBundle::layout.html.twig" %}
{% block title %}
  Accueil - {{ parent() }}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-sm-offset-1 col-sm-10">
            <h2>Informations personnelles</h2>
            <hr>
        </div>
    </div>
    <div class="row">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        
        {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}

            <div class="form-group">
              {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              <div class="col-sm-4">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="form-group">
              {{ form_label(form.prenom, "Prénom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              <div class="col-sm-4">
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="form-group">
              {{ form_label(form.adresse, "Adresse", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              <div class="col-sm-4">
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="form-group">
              {{ form_label(form.cp, "Code postal", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              <div class="col-sm-4">
                {{ form_widget(form.cp, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="form-group">
              {{ form_label(form.ville, "Ville", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              <div class="col-sm-4">
                {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="form-group">
              {{ form_label(form.dateEmbauche, "Date d'embauche", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              <div class="col-sm-4">
                    {{ form_widget(form.dateEmbauche, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="form-group">
              {{ form_label(form.mdp, "Mot de passe", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              <div class="col-sm-4">
                {{ form_widget(form.mdp, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-10">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
              </div>
            </div>
    {{ form_end(form) }}
    </div>
{% endblock %}